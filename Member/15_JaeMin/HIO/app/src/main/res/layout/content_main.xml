<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.user.hio.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <TextView
        android:text="11월 30일 정기모임"
        android:layout_width="140dp"
        android:layout_height="150dp"
        android:id="@+id/announcementTextVeiw"
        android:layout_alignLeft="@+id/announcementButton"
        android:layout_alignStart="@+id/announcementButton"
        android:layout_below="@+id/announcementButton"
        android:layout_above="@+id/boardButton"
        android:background="@android:color/holo_orange_light"
        android:paddingLeft="5dp"
        android:paddingTop="10dp" />

    <Button
        android:text="자유게시판☞"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:id="@+id/boardButton"
        android:layout_below="@+id/tipButton"
        android:layout_alignLeft="@+id/announcementTextVeiw"
        android:layout_alignStart="@+id/announcementTextVeiw"
        android:layout_marginTop="28dp"
        android:background="@android:color/holo_blue_bright" />

    <Button
        android:text="Tip☞"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:id="@+id/tipButton"
        android:layout_below="@+id/dayTextView"
        android:layout_alignLeft="@+id/dayTextView"
        android:layout_alignStart="@+id/dayTextView"
        android:layout_marginTop="26dp"
        android:background="@android:color/holo_red_light" />

    <TextView
        android:text="자료구조론"
        android:layout_width="140dp"
        android:layout_below="@+id/announcementTextVeiw"
        android:layout_alignLeft="@+id/tipButton"
        android:layout_alignStart="@+id/tipButton"
        android:id="@+id/tipTextView"
        android:layout_height="185dp"
        android:background="@android:color/holo_red_light"
        android:paddingLeft="5dp"
        android:paddingTop="10dp" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/logo"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="안녕하세요"
        android:layout_width="140dp"
        android:layout_height="110dp"
        android:id="@+id/boardTextview"
        android:background="@android:color/holo_blue_bright"
        android:layout_below="@+id/boardButton"
        android:layout_alignLeft="@+id/boardButton"
        android:layout_alignStart="@+id/boardButton"
        android:paddingLeft="5dp"
        android:paddingTop="10dp" />

    <Button
        android:text="공지사항☞"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="32dp"
        android:id="@+id/announcementButton"
        android:background="@android:color/holo_orange_light"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="   0일"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:id="@+id/dayTextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button"
        android:background="@android:color/holo_green_light"
        android:layout_alignTop="@+id/announcementButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:paddingLeft="5dp"
        android:paddingTop="10dp" />

</RelativeLayout>
